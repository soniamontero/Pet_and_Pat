
<div class="container">

  <div class="container">
    <h2>Pets you have booked <%= current_user.name %></h2>
    <div class="row">
      <% @upcoming_bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="blog-card booking-card" style="background: url('<%= cl_image_path booking.pet.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="title-content">
            <h3><%= Pet.find(booking.pet_id).name %></h3>
            <div class="intro"><%= booking.status %></div>
          </div><!-- /.title-content -->
          <div class="card-info">
            <%= booking.start_date.to_date %>

          </div><!-- /.card-info -->
          <!-- overlays -->
          <div class="gradient-overlay"></div>
          <div class="color-overlay"></div>
        </div><!-- /.blog-card -->
      </div>
      <% end %>
    </div>
  </div>

  <% if !@bookings_needing_review.empty? %>
  <div class="container">
    <h2> Please add a review to former bookings:</h2>
    <div class="row">
      <% @bookings_needing_review.each do |booking| %>
      <%= link_to new_booking_review_path(booking) do %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="blog-card booking-card" style="background: url('<%= cl_image_path booking.pet.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="title-content">
            <h3><%= Pet.find(booking.pet_id).name %></h3>
            <div class="intro"><%= booking.status %></div>
          </div><!-- /.title-content -->
          <div class="card-info">
            <%= booking.start_date.to_date %>

          </div><!-- /.card-info -->
          <!-- overlays -->
          <div class="gradient-overlay"></div>
          <div class="color-overlay"></div>
        </div><!-- /.blog-card -->
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
  <% end %>

  <div class="container">
    <h2>Your Pets bookings</h2>
    <div class="row">
      <% @mypets.each do |pet|%>
      <% pet.bookings.each do |booking|  %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="blog-card" style="background: url('<%= cl_image_path booking.pet.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="title-content">
            <h3><%= Pet.find(booking.pet_id).name %></h3>
            <% if booking.status != "approved" %>
            <%= link_to 'Approve Booking', approved_booking_path(booking), class: "btn", method: :patch %>
            <% end %>
            <div class="intro">
              <%= booking.status %>
            </div>
          </div><!-- /.title-content -->
          <div class="card-info">
            <%= booking.start_date.to_date %>
          </div><!-- /.card-info -->
          <!-- overlays -->
          <div class="gradient-overlay"></div>
          <div class="color-overlay"></div>
        </div><!-- /.blog-card -->
      </div>
      <% end %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <h2>All your beloved furry babies</h2>
    <div class="row">
      <% current_user.pets.each do |pet| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="blog-card" style="background: url('<%= cl_image_path pet.photo, height: 300, width: 400, crop: :fill %>');">
          <div class="title-content">
            <h3><%= pet.name %></h3>
            <div class="intro">
              <%= pet.description %>

            </div>
          </div><!-- /.title-content -->
          <div class="card-info">
           <%= link_to 'Edit', pet_path(pet), class: "btn" %>
         </div><!-- /.card-info -->
         <!-- overlays -->
         <div class="gradient-overlay"></div>
         <div class="color-overlay"></div>
       </div><!-- /.blog-card -->
     </div>
     <% end %>
   </div>
 </div>



