
<div class="container">
  <div>
    <h1>Hi, <%= current_user.name %>!</h1>
    <p>Welcome to your dashboard</p>
  </div>

  <div>
    <h2>Pets you have booked</h2>
      <% all_bookings = Booking.where(user_id: current_user.id)%>
      <% all_bookings.each do |booking| %>
        <div class="card">
            <p>You have booked:</p>
            <h4><%= Pet.find(booking.pet_id).name %></h4>
            <p>on: <%= booking.start_date.to_date %></p>
            <button><%= link_to 'Edit', edit_pet_booking_path(booking) %></button>
            <p> <%= booking.status %></p>
        </div>
      <% end %>
  </div>
  <div>
    <h2>Your Pets bookings</h2>
      <% @mypets.each do |pet|%>

        <% pet.bookings.each do |booking|  %>
          <div class="card">
            <h4><%= Pet.find(booking.pet_id).name %></h4>
            <p>Is booked on:</p>
            <p><%= booking.start_date.to_date %></p>
            <button><%= link_to 'Edit', edit_pet_booking_path(booking) %></button>
            <p> <%= booking.status %> </p>
            <% if booking.status != "approved" %>
              <button><%= link_to 'Approve Booking', approved_booking_path(booking), method: :patch %></button>
            <% end %>
          </li>
        </div>
      <% end %>
    <% end %>

  </div>


  <div>
    <h2>All your beloved furry babies</h2>
    <% current_user.pets.each do |pet| %>
      <div class="card"
        <h4><%= pet.name %></h4>
        <img src="http://www.thedailyrecords.com/wp-content/uploads/2017/01/Beagle-Top-Most-Famous-Beautiful-Dogs-Breeds-2018.jpg" style=" width: 150px">
        <p><%= pet.description %></p>
        <button><%= link_to 'Edit', pet_path(pet), class: "btn" %></button>
      </div>
    <% end %>
  </div>

</div>
