<div class="banner" style="background-image: url('https://imagesvc.timeincapp.com/v3/mm/image?url=https%3A%2F%2Ftimedotcom.files.wordpress.com%2F2018%2F01%2Fgettyimages-459583554.jpg&w=1600&q=70');">

  <div class="banner-content">

  </div>
</div>




<div class="container">
  <div class="row col-md-offset-1">

    <div class="col-xs-12 col-md-5 ">
      <div class="pet-info">
        <h2> <%= @pet.name %></h2>
        <p>Description: <%= @pet.description %></p>
        <p>Category: <%= @pet.category %></p>
        <p>Location: <%=  @pet.location %></p>
        <%= link_to 'Destroy', pet_path(@pet), class: 'btn', method: :delete, data: { confirm: 'Are you sure?'} %></p>
        <%= link_to 'Book this pet', new_pet_booking_path(@pet), class: 'btn' %>
        <div class="reviews">
          <h2>Reviews</h2>
          <% @pet.bookings.each do |booking| %>
          <% booking.reviews.each do |review| %>
            <p>Description: <%= review.content %></p>
            <p>Rating: <%= review.rating %></p>
           <% end %>
          <% end %>
          <%= link_to 'Back', root_path, class: 'btn' %>
        </div>
      </div>
    </div>


      <div class="col-xs-12 col-md-5 ">
        <div class="pet-info">
          <h2> Make a booking</H2>
          <%= simple_form_for([@pet, @booking]) do |f| %>
          <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :start_date, required: true %>
              <%= f.input :end_date, required: true %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Book" %>
            </div>
          <% end %>
        </div>
      </div>

  </div>
</div>


