<h1> <%= @pet.name %></h1>
<h3>Description:</h3>
    <p><%= @pet.description %></p>
    <p><%= @pet.category %></p>
    <p><%= @pet.location %></p>
    <p><%= link_to 'Destroy', pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?'} %></p>
    <%= link_to 'Book this pet', new_pet_booking_path(@pet) %>

<p><%= link_to 'Back', root_path %></p>

<h2>Reviews</h2>

<% @pet.bookings.each do |booking| %>

      <tr><p>
        <td><%= booking.review.content%></td>
        <td><%= booking.rating%></td>
        <% end %>
      </p></tr>

  <%= link_to 'Back', root_path, class: 'btn back-btn' %>


 t.text "content"
