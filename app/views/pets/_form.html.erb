  <%= simple_form_for(@pet) do |f| %>

    <div class="form-inputs ">
      <%= f.input :name, label: 'Name' %>
      <%= f.input :category %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :location, label: "Where's your pet?" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
