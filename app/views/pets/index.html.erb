<body>
    <h1 class="title">All your Pets</h1>
  <div class="container">
    <div class="row">
      <% @pets.each do |pet| %>
        <%= link_to pet_path(pet) do %>
        <div class="col-xs-6 col-sm-4 col-md-3">
            <div class="card-description">
                  <p><%= pet.name %></p>
                  <p><%= pet.description %></p>
                  <p><%= pet.category %></p>
                  <p><%= pet.location %></p>
                </p>
            </div>
          </div>
      </div>
          <% end %>
      <% end %>
    </div>
  </div>

</body>

