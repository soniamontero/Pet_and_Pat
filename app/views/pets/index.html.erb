<body>
  <div class="flexbox">

    <div class="container">

      <div class="row">
      <h1 class="title">Search Results...</h1>
        <% @pets.each do |pet| %>
        <%= link_to pet_path(pet) do %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <div class="card" style="background: url('https://imagesvc.timeincapp.com/v3/mm/image?url=https%3A%2F%2Ftimedotcom.files.wordpress.com%2F2018%2F01%2Fgettyimages-459583554.jpg&w=1600&q=70'), height: 300, width: 400, crop: :fill %>');">
            <div class="card-description">
              <div class="text-bottom">
                <p class="column-centered">
                  <p><%= pet.name %></p>
                  <p><%= pet.category %></p>
                  <p><%= pet.location %></p>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>

    <div id="map"></div>

  </div>
</body>

<!-- Gmaps js: building the map -->
<script>
  function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
      }
    </script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Gmaps JavaScript -->
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
  </script>
</body>
</html>

